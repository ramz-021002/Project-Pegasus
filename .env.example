# Database Configuration
DATABASE_URL=postgresql://pegasus:password@localhost:5432/pegasus_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Application Settings
SECRET_KEY=changeme-generate-random-32-byte-key
DEBUG=True
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload Settings
UPLOAD_DIR=/var/pegasus/quarantine
MAX_UPLOAD_SIZE=104857600
ALLOWED_FILE_EXTENSIONS=.exe,.dll,.bin,.pdf,.doc,.docx,.xls,.xlsx,.zip,.rar

# Docker Configuration
DOCKER_SOCKET=/var/run/docker.sock
ANALYSIS_TIMEOUT=300
DOCKER_NETWORK_PREFIX=pegasus_analysis

# Security
ENCRYPTION_KEY=changeme-generate-32-byte-encryption-key
FILE_PERMISSIONS=0400

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_TRACK_STARTED=True
CELERY_TASK_TIME_LIMIT=600

# Analysis Settings
STATIC_ANALYSIS_IMAGE=pegasus-static-analysis:latest
DYNAMIC_ANALYSIS_IMAGE=pegasus-dynamic-analysis:latest
NETWORK_GATEWAY_IMAGE=pegasus-network-gateway:latest
DYNAMIC_EXECUTION_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/pegasus/app.log

# Rate Limiting
RATE_LIMIT_UPLOADS=5
RATE_LIMIT_WINDOW=3600
